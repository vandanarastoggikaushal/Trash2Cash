# Apache configuration for Trash2Cash NZ
# Enable rewrite engine
RewriteEngine On

# Redirect to index.php for root
DirectoryIndex index.php index.html

# Custom Error Pages - Trash2Cash Branded
ErrorDocument 404 /404.php
ErrorDocument 403 /403.php
ErrorDocument 500 /500.php
ErrorDocument 503 /503.php

# Remove trailing slash for non-directories
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Prefer PHP file when both a directory and PHP file share the same slug
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)$ $1.php [NC,L]

# Clean URLs - remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+?)$ $1.php [NC,L]

# Force HTTPS (uncomment when SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP settings (adjust as needed)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Prevent direct access to sensitive files
<FilesMatch "^(db-config\.php|\.htaccess|\.gitignore)$">
  Order allow,deny
  Deny from all
</FilesMatch>
